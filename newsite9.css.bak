body {
	margin : 0;
	background : black;
}

article {
	width : 350px;
	height : 550px;
	background : rgb(175, 175, 254);
	border : 5px solid black;
	box-shadow : 6px 6px rgb(30, 30, 30);
	margin-top : 20px;
	float : left;
	margin-left : 50px;
	transition : all 0.9s ease;
}

hr {
	border : 2px solid white;
	width : 75%;
	margin : auto;
}

#intro {
	width : 50%;
	height : 30em;
	margin-left : 25%;
}

#art1 {
	display : none;
}

#art2 {
	display : none;
}

#art3 {
	display : none;
}

.base {
	display : none;
}

.welcome {
	color : aqua;
	font-size : 30px;
	font-family : Poppins;
	width : 88%;
	text-align : center;
	margin-left : 5%;
	margin-top : 30px;
	animation : newani 3s 1 ease;
	cursor : default;
}

.articleimg {
	width : 330px;
	height : 200px;
	margin-left : 1%;
	margin-top : 4px;
	border : 6px solid midnightBlue;
}

.top {
	font-size : 32px;
	font-family : Staatliches;
	color : midnightBlue;
	margin-left : 7px;
	cursor : default;
}

.text {
	font-size : 22px;
	font-family : Barlow;
	color : #202020;
	margin-left : 2%;
	margin-right : 2%;
	cursor : default;
}

.more {
	font-size : 28px;
	font-family : Staatliches;
	color : black;
	cursor : pointer;
	width : max-content;
	margin-left : 2%;
	margin-top : 20px;
}

.artimage {
	width : 700px;
	margin-left : 22%;
	margin-top : 70px;
	border : 7px double steelBlue;
}

.caption {
	margin-left : 25%;
	margin-top : 60px;
	font-family : Poppins;
	font-size : 50px;
	color : lavender;
}

.caption2 {
	margin-left : 37%;
	margin-top : 60px;
	font-family : Poppins;
	font-size : 50px;
	color : lavender;
}

.artcontent {
	width : 88%;
	font-family : Poppins;
	font-size : 30px;
	color : lavender;
	margin : auto;
}

.return {
	font-family : Staatliches;
	font-size : 38px;
	color : mediumTurquoise;
	background : darkBlue;
	border : 5px ridge mediumTurquoise;
	width : max-content;
	padding : 5px;
	cursor : pointer;
}

article:hover {
	background : turquoise;
	box-shadow : 12px 12px black;
}

@font-face {
	src: url('newsite9font1.ttf');
	font-family : Poppins;
}

@font-face {
	src: url('newsite9font2.ttf');
	font-family : Barlow;
}

@font-face {
	src: url('newsite9font3.ttf');
	font-family : Staatliches;
}

@keyframes newani {
	    0% {
		opacity : 0;
	} 100% {
		opacity : 1;
	}
}

@media (max-width : 800px) {
#intro {
	width : 100%;
	margin : 0;
	height : 300px;
}
	
.welcome {
	font-size : 20px;
 }
 
.artimage {
	margin-left : 10%;
	width : 80%;
	border-width : 1px;
 }
 
.return {
	margin : auto;
	background : black;
	border : 2px double white;
	color : beige;
 }
 
.caption {
	font-size : 30px;
	text-align : center;
	margin : auto;
}
 
.caption2 {
	font-size : 30px;
	text-align : center;
	margin : auto;
}
 
hr {
	margin-top : 30px;
 }

.artcontent {
    font-size : 22px;
	margin-left : 8%;
 }	
}

@media (min-width : 100px) and (max-width : 384px) {
article {
	margin : 2%;
 }
}

@media (min-width : 385px) and (max-width : 500px) {
article {
	margin : 7%;
	margin-top : 12px;
 }
}

@media (min-width : 501px) and (max-width : 799px) {
article {
	margin : 17%;
	margin-top : 8px;
 }
}

@media (min-width : 801px) and (max-width : 1150px) {
hr {
	margin-top : 50px;
	margin-left : 150px;
}

.caption {
	margin-left : 20%;
	margin-top : -20px;
 }
 
.caption2 {
	margin-left : 35%;
}
 
.artimage {
	margin : 17%;
	margin-top : 100px;
 }

.artcontent {
	margin-left : 120px;
	margin-top : 40px;
 } 
}

@media (min-width : 801px) and (max-width : 999px) {
#intro {
	width : 85%;
	margin-left : 8;
 }
}